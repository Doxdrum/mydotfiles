\section{Proposal: A polynomial affine model}
\begin{frame}
  \frametitle{Our bet: A new affine theory of gravity}

  \begin{itemize}
  \item An affine connection as solely dynamical field
  \item The action is polynomial in the fields
  \item Diffeomorphism invariance
  \item The invariant tensors are $\delta$ and $\epsilon$ (density)
  %% \item $\epsilon$ is a tensor density 
  %% \item Possible renormalizability? 
  \end{itemize}

%%   \begin{alertblock}
%%     {Key concept distinction}
%%     Geodesic and minimal distance are different concepts in general.

%%     \begin{align*}
%%       \nab{V}V &= 0 & \delta \int \de{s} &= 0 \\
%%       \text{Only connection}& & \text{Needs a metric}&
%%     \end{align*}
%%   \end{alertblock}
%% \end{frame}

%% \begin{frame}
  \begin{alertblock}{Affine connection}
    \begin{itemize}
    \item Defines a covariant linear derivative
    %% \item Transformation given by
    %%   $$ \hat\Gamma^{\lambda'}{}_{\nu'\mu'} = \partial_\lambda x^{\lambda'}\partial_{\mu'}x^\mu
    %%   \partial_{\nu'}x^\nu \hat\Gamma^{\lambda}{}_{\nu\mu}
    %%   + \partial_\lambda x^{\lambda'}\partial_{\mu'}
    %%   \partial_{\nu'}x^\lambda $$
    \item Defines a parallel transport
    \item It can be decomposed into irreps
      \begin{align*}
        \hat\Gamma^\mu{}_{\rho\sigma} %% &= {\Gamma}^\mu{}_{(\rho\sigma)} + T^\mu{}_{[\rho\sigma]} \\
        &= {\Gamma}^\mu{}_{\rho\sigma} + \epsilon_{\rho\sigma\lambda_1\dots\lambda_{d-2}}
        T^{\mu,\lambda_1\dots\lambda_{d-2}}+A{}_{[\rho}\delta{}_{\nu]}^\mu
      \end{align*}
      with $\epsilon_{\rho\mu\lambda_1\dots\lambda_{d-2}} T^{\mu,\lambda_1\dots\lambda_{d-2}}=0$.
    \end{itemize}
  \end{alertblock}
\end{frame}

%% \section{Our model}
\begin{frame}
  \frametitle{Cooking with the finest ingredients}
  \begin{columns}
    \column{.47\textwidth}
    \begin{itemize}
    \item Fields: $\Ga$, $T$ and $A$.
    \item $\Ga$ do not enter directly, but $\nabla$ or $\Riem(\Ga) \sim \nabla^2$.
    \item Seasonings: $\delta$ and $\epsilon$
    \item Lagrangian: scalar density
    \item $W(T) = W(\epsilon^\bullet) = 1$
    \item $N(\Phi)$ number of indices
    \end{itemize}
    \column{.47\textwidth}
    {\tiny
    \begin{table}
      %% \caption{Possible terms contributing to the Lagrangian density.}
      %% \label{tab:ld}
      \begin{tabular}{|C{.15\linewidth}C{.15\linewidth}C{.15\linewidth}C{.15\linewidth}|}
        \hline
        $a$ & $b$ & $c$ & $\ell$ \\
        \hline
        1 & 3 & 0 & 0\\
        1 & 2 & 1 & 0\\
        1 & 1 & 2 & 0\\
        1 & 0 & 3 & 0\\
        2 & 2 & 0 & -1\\
        2 & 1 & 1 & -1\\
        2 & 0 & 2 & -1\\
        3 & 1 & 0 & -2\\
        3 & 0 & 1 & -2\\
        4 & 0 & 0 & -3\\
        0 & 4 & 0 & 1\\
        0 & 3 & 1 & 1\\
        0 & 2 & 2 & 1\\
        0 & 1 & 3 & 1\\
        0 & 0 & 4 & 1\\
        \hline
      \end{tabular}
    \end{table}
    }
  \end{columns}
  \begin{alertblock}
    {The restrictions}
    \begin{align*}
      N( T^a A^b \nabla^c {\epsilon_{\dots}}^d {\epsilon^{\dots}}^e ) &= n & n &= 3 a -b - c + 4 \ell\\
      W( T^a A^b \nabla^c {\epsilon_{\dots}}^d {\epsilon^{\dots}}^e ) &= w & w &= a + \ell.
    \end{align*}
  \end{alertblock}
\end{frame}

\begin{frame}
  \frametitle{The MOST general action}
             {\small \begin{dmath*}[compact, spread=2pt] 
                 S[{\Gamma},T,A] =
                 \int\dn{4}{x}\Bigg[
                   B_1\, R_{\mu\nu}{}^{\mu}{}_{\rho} T^{\nu,\alpha\beta}T^{\rho,\gamma\delta}\epsilon_{\alpha\beta\gamma\delta}
                   +B_2\, R_{\mu\nu}{}^{\sigma}{}_\rho T^{\beta,\mu\nu}T^{\rho,\gamma\delta}\epsilon_{\sigma\beta\gamma\delta}
                   +B_3\, R_{\mu\nu}{}^{\mu}{}_{\rho} T^{\nu,\rho\sigma}A_\sigma
                   +B_4\, R_{\mu\nu}{}^{\sigma}{}_\rho T^{\rho,\mu\nu}A_\sigma
                   +B_5\, R_{\mu\nu}{}^{\rho}{}_\rho T^{\sigma,\mu\nu}A_\sigma
                   + \alert<2->{C_1\, R_{\mu\rho}{}^{\mu}{}_\nu \nabla_\sigma T^{\nu,\rho\sigma}
                   +C_2\, R_{\mu\nu}{}^{\rho}{}_\rho \nabla_\sigma T^{\sigma,\mu\nu} }
                   +D_1\, T^{\alpha,\mu\nu}T^{\beta,\rho\sigma}\nabla_\gamma T^{(\lambda, \kappa) \gamma}\epsilon_{\beta\mu\nu\lambda}\epsilon_{\alpha\rho\sigma\kappa}
                   +D_2\,T^{\alpha,\mu\nu}T^{\lambda,\beta\gamma}\nabla_\lambda T^{\delta,\rho\sigma}\epsilon_{\alpha\beta\gamma\delta}\epsilon_{\mu\nu\rho\sigma}
                   +D_3\,T^{\mu,\alpha\beta}T^{\lambda,\nu\gamma}\nabla_\lambda T^{\delta,\rho\sigma}\epsilon_{\alpha\beta\gamma\delta}\epsilon_{\mu\nu\rho\sigma}
                   +D_4\,T^{\lambda,\mu\nu}T^{\kappa,\rho\sigma}\nabla_{(\lambda} A_{\kappa)} \epsilon_{\mu\nu\rho\sigma}
                   +D_5\,T^{\lambda,\mu\nu}\nabla_{[\lambda}T^{\kappa,\rho\sigma} A_{\kappa]} \epsilon_{\mu\nu\rho\sigma}
                   +D_6\,T^{\lambda,\mu\nu}A_\nu\nabla_{(\lambda} A_{\mu)}
                   +D_7\,T^{\lambda,\mu\nu}A_\lambda\nabla_{[\mu} A_{\nu]} 
                   +E_1\,\nabla_{(\rho} T^{\rho,\mu\nu}\nabla_{\sigma)} T^{\sigma,\lambda\kappa}\epsilon_{\mu\nu\lambda\kappa}
                   +E_2\,\nabla_{(\lambda} T^{\lambda,\mu\nu}\nabla_{\mu)} A_\nu
                   +T^{\alpha,\beta\gamma}T^{\delta,\eta\kappa}T^{\lambda,\mu\nu}T^{\rho,\sigma\tau}
                   \Big(F_1\,\epsilon_{\beta\gamma\eta\kappa}\epsilon_{\alpha\rho\mu\nu}\epsilon_{\delta\lambda\sigma\tau}
                   +F_2\,\epsilon_{\beta\lambda\eta\kappa}\epsilon_{\gamma\rho\mu\nu}\epsilon_{\alpha\delta\sigma\tau}\Big) 
                   +F_3\, T^{\rho,\alpha\beta}T^{\gamma,\mu\nu}T^{\lambda,\sigma\tau}A_\tau \epsilon_{\alpha\beta\gamma\lambda}\epsilon_{\mu\nu\rho\sigma}
                   +F_4\,T^{\eta,\alpha\beta}T^{\kappa,\gamma\delta}A_\eta A_\kappa\epsilon_{\alpha\beta\gamma\delta}\Bigg].
             \end{dmath*}}
\end{frame}

